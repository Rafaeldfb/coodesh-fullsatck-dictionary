generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  firstName String
  lastName String?
  email String @unique
  password String // passwords are stored as hash
  session Session?
}

// Custom Session solution - 
model Session {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  logger User @relation(fields: [loggerId], references: [id] )
  loggerId String @db.ObjectId @unique
  token String @unique
  createdAt DateTime @default(now())
}
